<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Space Claw Machine</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>ClawQuest Machine</h1>
        <div class="claw-machine">
            <div class="machine-body">
                <div id="claw" class="claw"></div>
            </div>
            <br />       
        </div>
        <div id="result" class="result">Prize Result: </div>
        <div id="tries" class="tries">Tries Left: 3</div>
        <div id="claw-machine-grid" class="claw-machine-grid"></div>
        <div class="controls">
            <label for="column">Column:</label>
            <input type="number" id="column" min="1" max="8">
            <button onclick="operateClaw()">Operate Claw</button>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>


    <script>
        function operateClaw() {
            const column = parseInt(document.getElementById("column").value);

            // Calculate the position for the claw based on the selected column
            const clawPosition = (column - 1) * 38; // Adjust 60 to your desired column width

            const clawElement = document.getElementById("claw");
            clawElement.style.transform = `translateX(${clawPosition}px)`;
        }

    </script>
